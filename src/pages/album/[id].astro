---
import Layout from '#layouts/Layout.astro';
import { getAlbumById } from '#resources/getAlbumById.js';

const { id } = Astro.params;

const [album, error] = await getAlbumById(id);

if (error) {
  return new Response(undefined, {
    status: 500,
  });
}
const { title, cover, artists, songs } = album;
---

<Layout title="Spotify Clone">
  <div
    id="album-container"
    class="relative flex flex-col h-full overflow-x-hidden bg-zinc-900"
    transition:name=`album ${id} box`
  >
    <header class="flex flex-row gap-8 px-6 mt-12">
      <picture class="aspect-square size-52 flex-none">
        <img
          src={cover}
          alt={title}
          class="object-cover size-full shadow-lg"
          transition:name=`album ${id} image`
        />
      </picture>
      <div class="flex flex-col justify-between">
        <h2 class="flex flex-1 items-end font-bold text-white">Album</h2>
        <div>
          <h1 class="font-bold block text-5xl text-white">
            <span transition:name=`album ${id} title`>{title}</span>
          </h1>
        </div>
        <div class="flex-1 flex items-end">
          <div class="text-sm text-gray-300 font-normal">
            <div>
              <span transition:name=`album ${id} artists`
                >{artists.map(({ name }) => name).join(', ')}</span
              >
            </div>
            <p class="mt-1">
              <span class="test-white">{songs.length} songs</span>, 3 h aprox
            </p>
          </div>
        </div>
      </div>
    </header>
    <div class="relative z-10 px-6 pt-10"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80 -z-10"></div>
  </div>
</Layout>
