---
import AlbumItemCard from '#components/AlbumItemCard.astro';
import { getAlbumsWithArtists } from '#resources/getAlbumsWithArtists.js';
import Layout from '#layouts/Layout.astro';

const albums = await getAlbumsWithArtists();
---

<Layout title="Spotify Clone">
  <div id="playlist-container" class="relative transition-all duration-1000 bg-green-600">
    <div class="relative z-10 px-6 pt-10">
      <h1 class="text-4xl font-bold text-white">Good morning!</h1>
      <div class="flex flex-wrap mt-6 gap-4">
        {albums.map((album) => <AlbumItemCard album={album} />)}
      </div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"></div>
  </div>
</Layout>
